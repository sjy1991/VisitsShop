<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="BottomMenu" parent="Base.TextAppearance.AppCompat.Button">
        <item name="android:button">@null</item>
        <item name="android:textColor">@android:color/darker_gray</item>
        <item name="android:gravity">center_horizontal</item>

        <item name="android:layout_weight">1</item>
        <item name="android:padding">5dp</item>
        <item name="android:textSize">12sp</item>
        <item name="android:background">@android:color/white</item>
    </style>

    <style name="et_login">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:textSize">14dp</item>
    </style>
    <style name="bottom_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">1.0</item>
        <item name="android:drawablePadding">@dimen/bottom_img_padding</item>
        <item name="android:gravity">center</item>
        <item name="android:padding">@dimen/bottom_img_padding</item>
        <item name="android:textColor">@color/bottom_text_color</item>
        <item name="android:textSize">@dimen/bottom_text_size</item>
    </style>

</resources>
